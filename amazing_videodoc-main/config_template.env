DEPLOYMENT_MODE=production
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
API_BASE_URL=
FRONTEND_URL=
DATABASE_URL=sqlite:///./framenote.db
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# ====================
# 🤖 AI模型配置 (OpenAI)
