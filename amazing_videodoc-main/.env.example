# =============================================================================
# 基础配置
# =============================================================================
DEPLOYMENT_MODE=local
SERVER_HOST=0.0.0.0
SERVER_PORT=8001
API_BASE_URL=http://localhost:8001
FRONTEND_URL=http://localhost:3000

# =============================================================================
# AI模型配置
# =============================================================================
MODEL_ID=mistralai/ministral-8b
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
COHERE_API_KEY=your_cohere_api_key_here

# =============================================================================
# 腾讯云配置（语音识别）
# =============================================================================
TENCENT_APPID=your_tencent_appid
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key

# =============================================================================
# 用户认证配置
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_here_please_change_this_in_production

# 微信登录配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# QQ登录配置
QQ_APP_ID=your_qq_app_id
QQ_APP_KEY=your_qq_app_key

# 短信服务配置（阿里云）
SMS_ACCESS_KEY_ID=your_sms_access_key_id
SMS_ACCESS_KEY_SECRET=your_sms_access_key_secret
SMS_SIGN_NAME=FrameNote
SMS_TEMPLATE_CODE=SMS_123456789

# =============================================================================
# 支付配置
# =============================================================================

# 支付宝配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do

# 微信支付配置
WECHAT_PAY_MCH_ID=your_wechat_mch_id
WECHAT_PAY_API_KEY=your_wechat_api_key
WECHAT_PAY_CERT_PATH=/path/to/apiclient_cert.pem
WECHAT_PAY_KEY_PATH=/path/to/apiclient_key.pem

# =============================================================================
# 数据库配置
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/framenote
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# 文件存储配置
# =============================================================================
# 本地存储
STORAGE_PATH=./storage

# 云存储（可选）
# 阿里云OSS
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET_NAME=your_bucket_name
OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com

# 腾讯云COS
COS_SECRET_ID=your_cos_secret_id
COS_SECRET_KEY=your_cos_secret_key
COS_BUCKET=your_bucket_name
COS_REGION=ap-guangzhou

# =============================================================================
# 邮件服务配置
# =============================================================================
# SMTP配置
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USERNAME=your_email@qq.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=FrameNote <your_email@qq.com>

# 或者使用邮件服务商API
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# =============================================================================
# 监控和日志配置
# =============================================================================
# Sentry错误监控
SENTRY_DSN=your_sentry_dsn

# 日志级别
LOG_LEVEL=INFO

# =============================================================================
# 安全配置
# =============================================================================
# CORS配置
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# 限流配置
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# 业务配置
# =============================================================================
# 文件上传限制
MAX_UPLOAD_SIZE_MB=500
ALLOWED_EXTENSIONS=mp4,avi,mov,mkv,webm

# 视频处理配置
MAX_VIDEO_DURATION_SECONDS=7200
MAX_CONCURRENT_TASKS=5

# 会员配置
FREE_VIDEOS_PER_MONTH=3
BASIC_VIDEOS_PER_MONTH=20
STANDARD_VIDEOS_PER_MONTH=50
PREMIUM_VIDEOS_PER_MONTH=-1

# =============================================================================
# 第三方服务配置
# =============================================================================
# 百度AI
BAIDU_API_KEY=your_baidu_api_key
BAIDU_SECRET_KEY=your_baidu_secret_key

# 讯飞AI
XFYUN_APP_ID=your_xfyun_app_id
XFYUN_API_SECRET=your_xfyun_api_secret
XFYUN_API_KEY=your_xfyun_api_key

# =============================================================================
# 开发和测试配置
# =============================================================================
# 开发模式
DEBUG=false
TESTING=false

# 测试数据库
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/framenote_test

# Mock服务（开发时使用）
MOCK_PAYMENT=false
MOCK_SMS=false
MOCK_EMAIL=false
